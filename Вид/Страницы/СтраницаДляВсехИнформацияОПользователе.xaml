<Page x:Class="ЭлектронныйЖурналКурсовой.Вид.Страницы.СтраницаДляВсехИнформацияОПользователе"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЭлектронныйЖурналКурсовой.Вид.Страницы"
      mc:Ignorable="d" 
      
      Title="СтраницаДляВсехИнформацияОПользователе">

    <StackPanel Background="{StaticResource СреднеСиний }">
        <Border Margin="10" BorderBrush="Black" BorderThickness="1" Width="144" Height="144">
            <Image x:Name="ФотоПрофиля" Width="144" Height="144"  Margin="0" ToolTip="Ваше фото" Stretch="Uniform"/>
        </Border>
        <Button x:Name="КнопкаДобавитьИзображение" 
                Content="Загрузить фото"
                Width="auto" 
                HorizontalAlignment="Center" 
                Click="ЗагрузитьИзображение" 
                Background="{StaticResource ТёмноКоричневый}"/>
        <TextBlock x:Name="ФИО" Text="ФИО: " Margin="0,20,0,0"/>
        <TextBlock x:Name="ДатаРождения" Text="Дата рождения: " />
        <TextBlock x:Name="Должность" Text="Должность: " />
        <TextBlock x:Name="Группа" Text="Группа: " />

    </StackPanel>
</Page>
