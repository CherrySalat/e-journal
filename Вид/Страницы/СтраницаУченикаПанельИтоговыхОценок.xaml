<Page x:Class="ЭлектронныйЖурналКурсовой.Вид.Страницы.СтраницаУченикаПанельИтоговыхОценок"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ЭлектронныйЖурналКурсовой.Вид.Страницы"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="СтраницаУченикаПанельИтоговыхОценок">

    
        <StackPanel>
        <DataGrid x:Name="ПанельИнформацииОценки" Grid.Row="1" Margin="20" BorderThickness="1" AutoGenerateColumns="False" Height="350" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Предмет" Binding="{Binding предмет}" Width="*"/>
                <DataGridTextColumn Header="Оценка"  Binding="{Binding оценка}"  Width="0.3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="КнопкаНазад" Content="Назад" Click="КнопкаНазад_Нажать" />
        </StackPanel>
    
</Page>
